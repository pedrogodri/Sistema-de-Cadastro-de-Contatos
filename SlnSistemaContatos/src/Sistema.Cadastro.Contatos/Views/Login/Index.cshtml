@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success" role="alert">
        <button class="btn btn-danger btn-sm close-alert" type="button" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>
}

@if(TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button class="btn btn-danger btn-sm close-alert" type="button" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
  <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(c => c.Login)
  </div>
  <div class="mb-3">
    <label for="senha" class="form-label">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="senha">
    @Html.ValidationMessageFor(c => c.Senha)
  </div>

  <p class="mb-4 text-sm mx-auto">
      Esqueceu sua senha?
      <a asp-controller="Login" asp-action="RedefinirSenha" class="text-primary text-gradient font-weight-bold">Redefinir minha senha</a>
  </p>

   <div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary d-grid">Entrar</button>
   </div>
</form>