@model LoginModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if(TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button class="btn btn-danger btn-sm close-alert" type="button" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
  <div class="mb-3">
    <label for="login" class="form-label">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(c => c.Login)
  </div>
  <div class="mb-3">
    <label for="senha" class="form-label">Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="senha">
    @Html.ValidationMessageFor(c => c.Senha)
  </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary d-grid">Entrar</button>
    </div>
</form>